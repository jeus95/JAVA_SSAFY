package com.ssafy.algo;

import java.util.Arrays;
import java.util.Scanner;

public class Solution22 {
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		int T = sc.nextInt();
		
		
		for(int tc = 1; tc <= T; tc++) {
			int N = sc.nextInt(); //배열 크기
			int bNum =sc.nextInt(); //소금쟁이 수
			int cnt=0;
		
			int[][]map = new int[N][N];
			
			for(int i=0;i<bNum;i++)
			{	
				
				int row =sc.nextInt();
				int col =sc.nextInt();
				int dir =sc.nextInt();//1,2,3,4 (상 , 하 , 좌 ,우) 

				boolean flag = true;
				if(map[row][col]==1) {
					continue;
				}
				//System.out.println(dir);
				if(dir==1) {
					for(int l=3;l>0;l--) {
						
						//map[row][col]=0;
						row=row-l;
						if(row<0||row>N) {
							flag=false;
							//System.out.println("1");
						}
					}

				}
				else if(dir==2) {
					for(int l=3;l>0;l--) {
						
						//map[row][col]=0;
						row=row+l;
						if(row<0||row>N) {
							flag=false;
							//System.out.println("2");
						}
					}
					//map[row][col]=1;
				}
				else if(dir==3) {
					for(int l=3;l>0;l--) {
						
						//map[row][col]=0;
						col=col-l;
						if(col<0||col>N) {
							flag=false;
							//System.out.println("3");
						}
					}
					//map[row][col]=1;
				}
				else if(dir==4) {
					for(int l=3;l>0;l--) {
						
						//map[row][col]=0;
						col=col+l;
						if(col<0||col>N) {
							flag=false;
							//System.out.println("4");
						}
					}
					//map[row][col]=1;
				}			

			if(flag==true) {
				
				map[row][col]=1;
				}
			}//소금쟁이 마리 수만큼 반복문
		
		
		
		
		for(int i=0;i<N;i++) {
			for(int j=0;j<N;j++) {
				if(map[i][j]==1) {
					cnt++;
				}
			}
		}
		for(int i=0;i<N;i++) {
			for(int j=0;j<N;j++) {
				System.out.print(map[i][j]+ " ");
			}
			System.out.println();}
		
		System.out.println("#"+tc+" "+cnt);
		
			
			
			
			
		}//testcase
	}//main
}
